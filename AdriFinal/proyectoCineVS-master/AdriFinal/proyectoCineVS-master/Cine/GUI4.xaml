<Window x:Class="Cine.GUI4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GUI4 - Películas" Height="450" Width="800">
    <Grid Margin="10">
        <DataGrid Name="DataGridPeliculas" 
                  VerticalAlignment="Top" 
                  HorizontalAlignment="Left" 
                  Margin="10,10,0,0" 
                  Height="300" Width="760"
                  SelectionChanged="DataGridPeliculas_SelectionChanged">
            <!-- Las columnas se definen automáticamente si se usa el binding -->
        </DataGrid>
        <Button Name="ReservarButton" 
                Content="Reservar Sala" 
                Width="150" 
                Height="40"
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Center" 
                Click="ReservarButton_Click" />
    </Grid>
</Window>